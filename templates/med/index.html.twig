{% extends 'base.html.twig' %}

{% block title %}Med index{% endblock %}

{% block body %}
    <h1>Med index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Description</th>
                <th>Genre</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for med in meds %}
            <tr>
                <td>{{ med.id }}</td>
                <td>{{ med.firstName }}</td>
                <td>{{ med.lastName }}</td>
                <td>{{ med.description }}</td>
                <td>{{ med.genre }}</td>
                <td>{{ med.updatedAt ? med.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_med_show', {'id': med.id}) }}">show</a>
                    <a href="{{ path('app_med_edit', {'id': med.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_med_new') }}">Create new</a>
{% endblock %}
