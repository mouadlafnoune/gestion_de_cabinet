{% block title %}Med{% endblock %}

{% block body %}
    <h1>Med</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ med.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ med.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ med.lastName }}</td>
            </tr>
            <tr>
